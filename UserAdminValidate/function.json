{
  "bindings": [
    {
      "authLevel": "function",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "get"
      ],
      "route": "user/admin/validate/{login}"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "type": "cosmosDB",
      "direction": "in",
      "name": "inputUser",
      "databaseName": "firedlabs",
      "collectionName": "users",
      "sqlQuery": "SELECT * FROM c WHERE c.login = {login}", 
      "connectionStringSetting": "firedlabs_DOCUMENTDB"
    }
  ]
}
